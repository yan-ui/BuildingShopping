<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_gray"
    android:orientation="vertical"
    tools:context=".ui.category.sort_list.SortListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="5">

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbGoodId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:background="@null"
                android:textColor="@color/selector_radiobutton_red_gray_text_color"
                android:gravity="center"
                android:text="最新"
                android:textSize="@dimen/sp_16" />

            <RadioButton
                android:id="@+id/rbSaleNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:background="@null"
                android:textColor="@color/selector_radiobutton_red_gray_text_color"
                android:gravity="center"
                android:text="销量"
                android:textSize="@dimen/sp_16" />

            <RadioButton
                android:id="@+id/rbLastUpdate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="更新"
                android:background="@null"
                android:textColor="@color/selector_radiobutton_red_gray_text_color"
                android:textSize="@dimen/sp_16" />

        </RadioGroup>

        <cn.weiben.buildingshopping.widget.PriceUpDownView
            android:id="@+id/priceView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:background="#666666" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/cbMode"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@null"
                android:button="@drawable/selector_check_list_status"
                android:checked="true"
                android:gravity="center" />

        </RelativeLayout>


    </LinearLayout>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mSmartRefreshLayout"
        android:layout_width="match_parent"
        app:srlEnableLoadMore="false"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>