<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:minHeight="@dimen/dp_45"
        android:layout_height="wrap_content">
        
        <TextView
            android:text="商品名称"
            android:id="@+id/tvGoodsName"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"/>

        <TextView
            android:gravity="center"
            android:text="分享"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"/>
        
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPrice"
            android:text="10.00"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPromoteTag"
            android:background="@color/red"
            android:text="促销价"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvEndTime"
            android:background="@color/red"
            android:text="剩余"
            android:visibility="gone"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="价格："
            android:textSize="@dimen/sp_12"
            android:textColor="@color/gray999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvOldPrice"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/gray999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPointMsg"
            android:background="@color/red"
            android:text="赠送积分：10"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvZheKouNum"
            android:text="折扣：10折"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCommentNum"
            android:text="0人评价"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBuyNum"
            android:text="0人已购买"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_13"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/background_color_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"/>

    <TextView
        android:id="@+id/btnRankPriceView"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:text="会员等级价格"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:drawableRight="@mipmap/icon_gray_right"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45" />

    <View
        android:background="@color/background_color_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"/>


    <TextView
        android:id="@+id/btnGoodsParamView"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:text="产品参数"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:drawableRight="@mipmap/icon_gray_right"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45" />

    <View
        android:background="@color/background_color_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"/>


    <TextView
        android:id="@+id/btnGoodsTypeView"
        android:textColor="@color/black"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/sp_16"
        android:text="产品规格显示窗口"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:drawableRight="@mipmap/icon_gray_right"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45" />

    <TextView
        android:text="--商品详情--"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@color/background_color_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"/>

</LinearLayout>
